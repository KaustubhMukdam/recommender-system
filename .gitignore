data/raw/ml-25m/
data/raw/*.zip
data/processed/*.csv
data/processed/*.npz
data/processed/*.pkl
*.h5
*.hdf5

# Keep data directories but not contents
!data/raw/.gitkeep
!data/processed/.gitkeep

